datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Buyer {
  id       String @id @default(uuid())
  email    String @unique
  username String
  password String

  visited Location[]
  tickets Ticket[]
}

model Ticket {
  id          String   @id @default(uuid())
  buyer       Buyer?   @relation(fields: [buyerId], references: [id])
  buyerId     String?  @unique
  destination Location @relation(fields: [locationId], references: [id])
  locationId  String   @unique
}

model Location {
  id       String  @id @default(uuid())
  name     String  @unique
  visitors Buyer[]
  ticket   Ticket?
}

// buyer -> location : many - many
// buyer -> ticket : 1 - many
// ticket -> location: 1 - 1

